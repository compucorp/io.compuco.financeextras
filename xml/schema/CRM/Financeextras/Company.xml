<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Financeextras</base>
  <class>Company</class>
  <name>financeextras_company</name>
  <comment>Holds the company (legal entity) information</comment>
  <log>true</log>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique Company ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>contact_id</name>
    <type>int unsigned</type>
    <comment>FK to Contact</comment>
  </field>
  <foreignKey>
    <name>contact_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>invoice_template_id</name>
    <title>Invoice Template ID</title>
    <type>int unsigned</type>
    <pseudoconstant>
      <table>civicrm_msg_template</table>
      <keyColumn>id</keyColumn>
      <labelColumn>msg_title</labelColumn>
    </pseudoconstant>
    <comment>FK to the message template.</comment>
    <html>
      <label>Invoice Template</label>
    </html>
  </field>
  <foreignKey>
    <name>invoice_template_id</name>
    <table>civicrm_msg_template</table>
    <key>id</key>
    <onDelete>SET NULL</onDelete>
  </foreignKey>

  <field>
    <name>invoice_prefix</name>
    <title>Invoice Prefix</title>
    <type>varchar</type>
    <length>11</length>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>next_invoice_number</name>
    <title>Next Invoice Number</title>
    <type>varchar</type>
    <length>11</length>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>creditnote_template_id</name>
    <title>Credit Note Template ID</title>
    <type>int unsigned</type>
    <pseudoconstant>
      <table>civicrm_msg_template</table>
      <keyColumn>id</keyColumn>
      <labelColumn>msg_title</labelColumn>
    </pseudoconstant>
    <comment>FK to the message template.</comment>
    <html>
      <label>Credit Note Template</label>
    </html>
  </field>
  <foreignKey>
    <name>creditnote_template_id</name>
    <table>civicrm_msg_template</table>
    <key>id</key>
    <onDelete>SET NULL</onDelete>
  </foreignKey>

  <field>
    <name>creditnote_prefix</name>
    <title>Credit Note Prefix</title>
    <type>varchar</type>
    <length>11</length>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>next_creditnote_number</name>
    <title>Next Credit Note Number</title>
    <type>varchar</type>
    <length>11</length>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>receivable_payment_method</name>
    <title>Accounts Receivable Payment Method</title>
    <type>int unsigned</type>
    <html>
      <label>Accounts Receivable Payment Method</label>
    </html>
  </field>

  <field>
    <name>company_number</name>
    <title>Company Number</title>
    <type>varchar</type>
    <length>255</length>
    <html>
      <label>Company Number</label>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>sales_tax_registration_number</name>
    <title>Sales Tax Registration Number</title>
    <type>varchar</type>
    <length>255</length>
    <html>
      <label>Sales Tax Registration Number</label>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>display_currency_conversion_for_tax_on_invoices</name>
    <title>Display Currency Conversion For Tax On Invoices</title>
    <type>tinyint</type>
    <html>
      <type>CheckBox</type>
      <label>Display Currency Conversion For Tax On Invoices</label>
    </html>
  </field>

  <field>
    <name>sales_tax_currency</name>
    <title>Sales Tax Currency</title>
    <type>varchar</type>
    <length>100</length>
    <html>
      <label>Sales Tax Currency</label>
      <type>Text</type>
    </html>
  </field>
</table>
