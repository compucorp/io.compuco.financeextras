<?xml version="1.0" encoding="iso-8859-1" ?>

<table>
  <base>CRM/Financeextras</base>
  <class>CreditNote</class>
  <name>financeextras_credit_note</name>
  <comment>Stores credit note for contribution refund or allocations</comment>
  <log>true</log>

  <paths>
    <view>civicrm/contribution/creditnote/view?reset=1&amp;id=[id]</view>
    <update>civicrm/contribution/creditnote/new?reset=1&amp;id=[id]</update>
    <delete>civicrm/contribution/creditnote/delete?reset=1&amp;id=[id]</delete>
  </paths>

  <field>
    <name>id</name>
    <type>int unsigned</type>
    <required>true</required>
    <comment>Unique CreditNote ID</comment>
    <html>
      <type>Number</type>
    </html>
  </field>
  <primaryKey>
    <name>id</name>
    <autoincrement>true</autoincrement>
  </primaryKey>

  <field>
    <name>contact_id</name>
    <type>int unsigned</type>
    <comment>FK to Contact</comment>
  </field>
  <foreignKey>
    <name>contact_id</name>
    <table>civicrm_contact</table>
    <key>id</key>
    <onDelete>CASCADE</onDelete>
  </foreignKey>

  <field>
    <name>cn_number</name>
    <title>Autogenerated credit note number</title>
    <type>varchar</type>
    <length>11</length>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>date</name>
    <type>date</type>
    <comment>Credit Note date</comment>
    <html>
      <type>Select Date</type>
    </html>
  </field>

  <field>
    <name>status_id</name>
    <type>int unsigned</type>
    <comment>One of the values of the financeextras_credit_note_status option group</comment>
    <required>true</required>
    <pseudoconstant>
      <optionGroupName>financeextras_credit_note_status</optionGroupName>
    </pseudoconstant>
    <html>
      <label>Status</label>
      <type>Select</type>
    </html>
  </field>

  <field>
    <name>reference</name>
    <title>Credit Note Reference</title>
    <type>varchar</type>
    <length>11</length>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>currency</name>
    <title>Financial Currency</title>
    <type>varchar</type>
    <length>3</length>
    <default>NULL</default>
    <headerPattern>/cur(rency)?/i</headerPattern>
    <dataPattern>/^[A-Z]{3}$/</dataPattern>
    <comment>3 character string, value from config setting or input via user.</comment>
    <pseudoconstant>
      <table>civicrm_currency</table>
      <keyColumn>name</keyColumn>
      <labelColumn>full_name</labelColumn>
      <nameColumn>name</nameColumn>
      <abbrColumn>symbol</abbrColumn>
    </pseudoconstant>
    <html>
      <type>Select</type>
    </html>
  </field>

  <field>
    <name>description</name>
    <type>text</type>
    <required>false</required>
    <comment>Credit note description</comment>
    <html>
      <label>Description</label>
      <type>TextArea</type>
    </html>
  </field>

  <field>
    <name>comment</name>
    <type>text</type>
    <required>false</required>
    <comment>Credit note comment</comment>
    <html>
      <label>Comment</label>
      <type>TextArea</type>
    </html>
  </field>

  <field>
    <name>subtotal</name>
    <type>decimal</type>
    <required>false</required>
    <comment>Total of all the total price fields</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>sales_tax</name>
    <type>decimal</type>
    <required>false</required>
    <comment>Credit note sales tax total</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

  <field>
    <name>total_credit</name>
    <type>decimal</type>
    <required>false</required>
    <comment>Total value of the credit note</comment>
    <html>
      <type>Text</type>
    </html>
  </field>

</table>
